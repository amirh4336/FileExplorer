<Window x:Class="FileExplorer.MWM.View.CreateDataBase"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileExplorer.MWM.View"
        mc:Ignorable="d"
        WindowStyle="None"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        WindowStartupLocation="CenterOwner"
        Title="CreateDataBase" Height="150" Width="250">
    <Grid>
        <StackPanel VerticalAlignment="Center" >
            <TextBlock Text="       Size(KB) :" />
            <TextBox x:Name="txtInput" Width="200" Height="40" Margin="5" TextChanged="txtInput_TextChanged"  />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >
                <Button x:Name="btnOk" Content="Create Tree" Width="100" Height="40" Margin="2" Click="btnOk_Click" IsEnabled="False" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
