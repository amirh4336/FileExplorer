<Window x:Class="DsProject.MWM.View.AddPartions"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DsProject.MWM.View"
        mc:Ignorable="d"
        Title="AddPartions" WindowStyle="None"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        WindowStartupLocation="CenterOwner" Height="250" Width="250">
    <Grid>
        <Label Content="name:" Foreground="Black" Margin="10,10,150,215"/>
        <TextBox x:Name="txtNameInput" TextChanged="txtNameInput_TextChanged" TextWrapping="Wrap"  Margin="10,40,10,171"/>
        <Label Content="size:" Margin="10,87,150,138"/>
        <TextBox x:Name="txtSizeInput" TextChanged="txtSizeInput_TextChanged" TextWrapping="Wrap"  Margin="10,117,10,94"/>
        <Button x:Name="btnCancel" Content="Cancel" Click="btnCancel_Click" HorizontalAlignment="Left" Margin="125,186,0,0"  VerticalAlignment="Top" Width="103" Height="26"/>
        <Button x:Name="btnOk" Content="Ok"  Click="btnOk_Click" HorizontalAlignment="Left" Margin="10,186,0,0" VerticalAlignment="Top" IsEnabled="False" Width="103" Height="26"/>
    </Grid>
</Window>
