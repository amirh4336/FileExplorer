<Window x:Class="DsProject.MWM.View.CreateTextFile"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DsProject.MWM.View"
        mc:Ignorable="d"
        WindowStyle="None"
        Title="CreateTextFile" Height="200" Width="200"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        WindowStartupLocation="CenterOwner"
        >
    <Grid>
        <TextBlock Text="File Name:"  HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="20" Width="66"/>
        <Button  x:Name="btnCancel" Content="Cancel" Click="btnCancel_Click" HorizontalAlignment="Left" Margin="107,119,0,0" VerticalAlignment="Top" Height="29" Width="72"/>
        <Button  x:Name="btnOk" Content="Ok"  Click="btnOk_Click" HorizontalAlignment="Left" Margin="25,119,0,0" VerticalAlignment="Top" Height="29" Width="75" IsEnabled="False" />
        <TextBox x:Name="txtInput" TextChanged="txtInput_TextChanged" HorizontalAlignment="Center" Margin="0,35,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="180" RenderTransformOrigin="0.163,-1.069" Height="39"/>

    </Grid>
</Window>
